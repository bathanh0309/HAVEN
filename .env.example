#  Copy file này thành .env:
#   copy .env.example .env

# SOURCE TYPE
# ================================
SOURCE_TYPE=rtsp                  # rtsp or video

# ================================
# CAMERA NETWORK (for RTSP)
# ================================
CAMERA_NAME=tapo_c210_example
CAMERA_IP=192.168.1.XXX          #  Thay XXX bằng IP thật
CAMERA_PORT=554
CAMERA_USER=your_username         #  Thay bằng username thật
CAMERA_PASSWORD=your_password     #  Thay bằng password thật

# ================================
# RTSP STREAMS
# ================================
RTSP_STREAM_HD=stream1
RTSP_STREAM_SD=stream2
DEFAULT_STREAM=SD

# ================================
# VIDEO FILE (for video processing)
# ================================
VIDEO_PATH=test_videos/sample.mp4
LOOP_VIDEO=False

# ================================
# AI MODEL PATHS
# ================================
AI_MODEL_PATH=backend/models/yolo11n-pose.pt

# ================================
# PERFORMANCE TUNING
# ================================
CONF_THRES=0.25
IOU_THRES=0.7
IMG_SIZE=640
MAX_DET=10
FRAME_BUFFER_SIZE=1
RECONNECT_BACKOFF_SECONDS=5
MAX_RECONNECT_ATTEMPTS=10
STREAM_TIMEOUT_SECONDS=30
FPS_LIMIT=15
JPEG_QUALITY=80
RESIZE_WIDTH=0

# ================================
# ADVANCED OPTIONS
# ================================
DEBUG_MODE=False
WS_PING_INTERVAL=30
SAVE_OUTPUT_VIDEO=False

# ================================
# ROBOFLOW INFERENCE
# ================================
INFERENCE_URL=http://localhost:9001
INFERENCE_EVERY_N=3
